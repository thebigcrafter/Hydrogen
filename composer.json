{
  "name": "thebigcrafter/hydrogen",
  "description": "A library that provides common functionality for the plugins of thebigcrafter",
  "type": "library",
  "require": {
    "php": "^8.1",
    "pocketmine/pocketmine-mp": "^5.0"
  },
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "friendsofphp/php-cs-fixer": "^3.17"
  },
  "license": "Apache-2.0",
  "autoload": {
    "psr-4": {
      "thebigcrafter\\Hydrogen\\": "src/thebigcrafter/Hydrogen"
    }
  },
  "authors": [
    {
      "name": "thebigcrafter"
    }
  ],
  "scripts": {
    "fix-cs": "./vendor/bin/php-cs-fixer fix",
    "analyse": "./vendor/bin/phpstan analyse"
  },
  "extra": {
    "virion": {
      "spec": "3.0",
      "namespace-root": "thebigcrafter\\Hydrogen"
    }
  }
}
